<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.com.itheima.dao.UserDao">
    <resultMap id="userMapper" type="user">
        <id column="id" property="id"></id>
        <result column="username" property="username"></result>
        <result column="password" property="password"></result>
        <result column="email" property="email"></result>
        <collection property="roles" ofType="role" column="id" select="com.com.itheima.dao.RoleDao.findByUid"></collection>
    </resultMap>
    <select id="findAll" resultMap="userMapper">
        SELECT * FROM t_user
    </select>
    <!--需要返回自增的主键-->
    <insert id="save" parameterType="user">
        <selectKey keyColumn="id" keyProperty="id" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO t_user (username, password, email) VALUES (#{username}, #{password}, #{email})
    </insert>
    <insert id="saveUserRole">
        INSERT INTO t_user_role (user_id, role_id) VALUES (#{userId}, #{roleId})
    </insert>
    <select id="findList" resultMap="userMapper">
        SELECT * FROM t_user LIMIT #{startIndex},#{pageSize}
    </select>
    <select id="findCount" resultType="int">
        SELECT COUNT(*) FROM t_user
    </select>
    <select id="findById" parameterType="int" resultMap="userMapper">
        SELECT * FROM t_user WHERE id = #{id}
    </select>
    <update id="update" parameterType="user">
        UPDATE t_user SET username=#{username},password=#{password},email=#{email} WHERE id=#{id}
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM t_user WHERE id = #{id}
    </delete>
    <delete id="deleteUserRefRole" parameterType="int">
       DELETE FROM t_user_role WHERE user_id = #{uid}
    </delete>
</mapper>