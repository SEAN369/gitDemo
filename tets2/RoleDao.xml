<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.com.itheima.dao.RoleDao">
    <select id="findAll" resultType="role">
        SELECT * FROM t_role
    </select>
    <insert id="save" parameterType="role">
        INSERT INTO t_role (name, description) VALUES (#{name}, #{description})
    </insert>
    <select id="findList" resultType="role">
        SELECT * FROM t_role LIMIT #{startIndex},#{pageSize}
    </select>
    <select id="findCount" resultType="int">
        SELECT COUNT(*) FROM t_role
    </select>
    <select id="findById" parameterType="int" resultType="role">
        SELECT * FROM t_role WHERE id = #{id}
    </select>
    <update id="update" parameterType="role">
        UPDATE t_role SET name=#{name},description=#{description} WHERE id=#{id}
    </update>
    <delete id="delete" parameterType="int">
        DELETE FROM t_role WHERE id = #{id}
    </delete>
    <select id="findByUid" resultType="role" parameterType="int">
        SELECT * FROM t_role r
        LEFT JOIN t_user_role ur ON ur.role_id = r.id
        WHERE ur.user_id = #{uid}
    </select>
</mapper>